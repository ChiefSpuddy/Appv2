platform :ios, '12.0'

# CocoaPods analytics sends network stats synchronously affecting flutter build latency.
ENV['COCOAPODS_DISABLE_STATS'] = 'true'

project 'Runner', {
  'Debug' => :debug,
  'Profile' => :release,
  'Release' => :release,
}

def flutter_root
  generated_xcode_build_settings_path = File.expand_path(File.join('..', 'Flutter', 'Generated.xcconfig'), __FILE__)
  
  # Create Flutter directory if it doesn't exist
  flutter_dir = File.dirname(generated_xcode_build_settings_path)
  Dir.mkdir(flutter_dir) unless File.exist?(flutter_dir)
  
  unless File.exist?(generated_xcode_build_settings_path)
    # Try to regenerate the file
    system('flutter pub get')
    
    # If still doesn't exist, raise error
    unless File.exist?(generated_xcode_build_settings_path)
      raise "#{generated_xcode_build_settings_path} must exist. If you're running pod install manually, make sure flutter pub get is executed first"
    end
  end

  File.foreach(generated_xcode_build_settings_path) do |line|
    matches = line.match(/FLUTTER_ROOT\=(.*)/)
    return matches[1].strip if matches
  end
  raise "FLUTTER_ROOT not found in #{generated_xcode_build_settings_path}. Try deleting Generated.xcconfig, then run flutter pub get"
end

require File.expand_path(File.join('packages', 'flutter_tools', 'bin', 'podhelper'), flutter_root)

flutter_ios_podfile_setup

target 'Runner' do
  use_frameworks!
  use_modular_headers!
  
  flutter_install_all_ios_pods File.dirname(File.realpath(__FILE__))
  
  target 'RunnerTests' do
    inherit! :search_paths
  end
end

pre_install do |installer|
  # Apply patch to BoringSSL-GRPC
  system('mkdir -p ios/patches')
  system('cp patches/BoringSSL-GRPC.patch Pods/BoringSSL-GRPC/')
  Dir.chdir('Pods/BoringSSL-GRPC') do
    system('patch -p1 < BoringSSL-GRPC.patch')
  end
end

post_install do |installer|
  installer.pods_project.targets.each do |target|
    target.build_configurations.each do |config|
      # Default settings for all targets
      config.build_settings['IPHONEOS_DEPLOYMENT_TARGET'] = '12.0'
      config.build_settings['ENABLE_BITCODE'] = 'NO'
      config.build_settings['BUILD_LIBRARY_FOR_DISTRIBUTION'] = 'YES'
      config.build_settings['ONLY_ACTIVE_ARCH'] = 'NO'
      
      if target.name == 'BoringSSL-GRPC'
        # Force remove all compiler flags and set minimal configuration
        config.build_settings['OTHER_CFLAGS'] = ''
        config.build_settings['OTHER_CPLUSPLUSFLAGS'] = ''
        config.build_settings['OTHER_LDFLAGS'] = ''
        config.build_settings['CLANG_CXX_LANGUAGE_STANDARD'] = 'c++11'
        config.build_settings['ARCHS'] = 'arm64'
        config.build_settings['GCC_PREPROCESSOR_DEFINITIONS'] = ['$(inherited)']
        
        # Remove any potential problematic settings
        config.build_settings.delete('GCC_OPTIMIZATION_LEVEL')
        config.build_settings.delete('COMPILER_INDEX_STORE_ENABLE')
        config.build_settings.delete('CLANG_ENABLE_MODULE_DEBUGGING')
      end
    end
    flutter_additional_ios_build_settings(target)
  end
end
